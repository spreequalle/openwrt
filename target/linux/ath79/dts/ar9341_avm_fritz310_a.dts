#include "ar9341.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	compatible = "avm,fritzrepeater-310_a", "qca,ar9341";
	model = "AVM FRITZ!WLAN Repeater 310 A";

	aliases {
		led-boot = &led_power;
		led-failsafe = &led_power;
		led-running = &led_power;
		led-upgrade = &led_power;
	};

	// TESTME
	keys {
		compatible = "gpio-keys";

		wps {
			label = "wps";
			linux,code = <KEY_WPS_BUTTON>;
			gpios = <&gpio 22 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led_power: power {
			label = "green:power";
			gpios = <&gpio 20 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		wlan {
			label = "green:wlan";
			gpios = <&gpio 19 GPIO_ACTIVE_LOW>;
//			linux,default-trigger = "phy0tpt"; FIXME
			linux,default-trigger = "heartbeat";
		};

		rssi0 {
			label = "green:rssi0";
			gpios = <&gpio 13 GPIO_ACTIVE_LOW>;
		};

		rssi1 {
			label = "green:rssi1";
			gpios = <&gpio 14 GPIO_ACTIVE_LOW>;
		};

		rssi2 {
			label = "green:rssi2";
			gpios = <&gpio 15 GPIO_ACTIVE_LOW>;
		};

		rssi3 {
			label = "green:rssi3";
			gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
		};

		rssi4 {
			label = "green:rssi4";
			gpios = <&gpio 17 GPIO_ACTIVE_LOW>;
		};
	};
};

&ref {
	clock-frequency = <40000000>;
};

&spi {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <25000000>;

		// TESTME flash claims to support 80 MHz + fast read
		// spi-max-frequency = <80000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				reg = <0x0 0x20000>;
				label = "urloader";
				read-only;
			};

			partition@20000 {
				compatible = "avm,eva-firmware";
				reg = <0x20000 0xee0000>;
				label = "firmware";
			};

			partition@f00000 {
				reg = <0xf00000 0x80000>;
				label = "tffs (1)";
				read-only;
			};

			partition@f80000 {
				reg = <0xf80000 0x80000>;
				label = "tffs (2)";
				read-only;
			};
		};
	};
};

// TESTME
// art parition table does not exists, calibration data seems to be part of the bootloader partition
&wmac {
	status = "okay";

	mtd-cal-data = <&urloader 0x958>;

	nvmem-cells = <&macaddr_urloader_0>;
	nvmem-cell-names = "mac-address";
};

&urloader {
	compatible = "nvmem-cells";
	#address-cells = <1>;
	#size-cells = <1>;

	macaddr_urloader_0: macaddr@0 {
		reg = <0x93c 0x6>;
	};
};
